{
  "manifest_version": 3,
  "name": "Arbitration Blogs",
  "version": "0.0.2",

  "description": "Arbitration Blogs",

  "icons": {
    "16": "/favicon.ico",
    "32": "/favicon.ico",
    "48": "/favicon.ico",
    "128": "/favicon.ico"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://arbitrationagreement.com/"]
}
